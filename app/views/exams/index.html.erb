<h3>考试列表</h3>
<%= link_to '新建考试', new_exam_path,:class=>"btn btn-success" %>
<br><br>
<div id="create_exams" width="100%"></div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>考试名称</th>
      <th>简介</th>
      <th>何时开始可以参加考试</th>
      <th>何时结束</th>
      <th>考试时长</th>
      <th>试题数量</th>
      <th>提供者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td><%= exam.description %></td>
        <td><%= exam.valid_from.strftime("%m-%d %H:%i") %></td>
        <td><%= exam.valid_to.strftime("%m-%d %H:%i") %></td>
        <td><%= exam.timespan %>分钟</td>
        <td><%= exam.teacher.name %></td>
        <td><%= link_to '详情', exam %></td>
        <td><%= link_to '编辑', edit_exam_path(exam) %></td>
        <td><%= link_to '删除', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- 模态对话框 -->
<div id="detailModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="model-title"></h3>
  </div>
  <div id="modal-body" style="padding:20px">
    <p></p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
  </div>
</div>

<%= content_for :js do %>
<%= render "js" %>
<% end %>